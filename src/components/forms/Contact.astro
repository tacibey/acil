---
<form class="space-y-6 bg-white p-6 rounded-lg">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Input
            label="Adınız Soyadınız"
            id="name"
            name="name"
            required
            background={formBackground}
        />
        <Input
            label="Telefon Numaranız"
            type="tel"
            id="phone"
            name="phone"
            required
            placeholder="05XXXXXXXXX"
            background={formBackground}
        />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Select
            label="İl Seçiniz"
            id="il"
            name="il"
            options={ilOptions}
            required
            placeholder="Lütfen bir il seçin"
            background={formBackground}
        />
        <Input
            label="İlçe"
            id="ilce"
            name="ilce"
            placeholder="İlçe adını yazınız"
            required
            background={formBackground}
        />
    </div>

    <Radio
        label="Gayrimenkul türünüz?"
        id="gayrimenkul-turu"
        name="gayrimenkul-turu"
        options={gayrimenkulTuruOptions}
        required
        background={formBackground}
    />
    
    <Textarea
        label="Gayrimenkulünüz hakkında kısaca bilgi verebilirsiniz."
        id="message"
        name="message"
        required
        rows={3}
        background={formBackground}
    />

    <Textarea
        label="Aklınızdaki fiyat? (Opsiyonel)"
        id="fiyat-teklifi"
        name="fiyat-teklifi"
        rows={1}
        placeholder="Örn: 1.500.000 TL"
        background={formBackground}
    />

    <Input
        label="Varsa mevcut ilan linkiniz (Opsiyonel)"
        type="url"
        id="ilan-linki"
        name="ilan-linki"
        placeholder="https://..."
        background={formBackground}
    />
    
    <Select
        label="Hangi danışmanla çalışmak istersiniz?"
        id="danisman"
        name="danisman"
        options={danismanOptions}
        required
        placeholder="Bir danışman seçin"
        background={formBackground}
    />

    <Checkbox
        label="Kullanım sözleşmesini kabul ediyorum."
        id="terms"
        name="terms"
        required
        background={formBackground}
    />
    
    <div class="mt-6">
        <Button type="submit">Bilgileri Gönder</Button>
    </div>
</form>
