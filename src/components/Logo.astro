---
import { Image } from 'astro:assets';
import siteLogo from '../assets/images/acil-emlak-sat-logo.png'; // YENİ LOGONUZUN YOLU

interface Props {
    variant?: 'header' | 'footer' | 'dark';
}

const { variant = 'header' } = Astro.props;

// Determine the appropriate CSS class based on the variant
// Bu kısım şimdilik aynı kalabilir, gerekirse daha sonra renkleri ayarlarız.
const getLogoClass = () => {
    switch (variant) {
        case 'header':
            return 'text-header-logo hover:text-primary'; // Temanın renk değişkenlerini kullanır
        case 'footer':
            return 'text-footer-logo hover:text-primary'; // Temanın renk değişkenlerini kullanır
        case 'dark': // Bu variant temada tanımlı olmayabilir, genel bir fallback
            return 'text-body-base hover:text-primary';
        default:
            return 'text-body-base hover:text-primary';
    }
};
---

<a href="/" class:list={['logo transition-colors duration-200 flex items-center', getLogoClass()]}>
    <Image 
        src={siteLogo} 
        alt="Acil Emlak Sat Logosu" 
        class="h-16 w-auto"
    />
    {/* Eğer logonuzda metin yoksa ve ayrıca metin eklemek istemiyorsanız, aşağıdaki span'ları silebilirsiniz. */}
    {/* <span class="font-logo uppercase font-light ml-2"><span class="font-bold">Acil</span> Emlak Sat</span> */}
</a>
