---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/default-hero-2.jpg';
import styleGuideImage from '../assets/images/home/developer.jpg';

const seoTitle = "Acil Emlak & Gayrimenkul Alım Satım Platformu";
const seoDescription = "Gayrimenkulünüzü hızlı ve karlı bir şekilde satmak için doğru yerdesiniz. AcilEmlakSat.com ile 21 gün içinde değerinde satış yaparak zamandan ve stresten tasarruf edin. Profesyonel destekle.";

const heroContent = {
    title: 'Stres Yok, Beklemek Yok: Acil Emlak Sat!',
    description: 'Gayrimenkulünüzü acil satmanız mı gerekiyor? AcilEmlakSat.com ile kolay, güvenli ve hızlı! Uzman ekibimizle maksimum 21 günde, değerinde bir satışla kazançlı çıkın. Beklemeyin, rahat edin!',
    buttons: [
        {
            text: 'Acil Satın',
            link: '/contact',
            target: '_self'
        },
        {
            text: 'Yatırımcı Olun',
            link: '/team',
            target: '_self'
        }
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}

const featuresSection = {
    eyebrow: "Neden ACILEMLAKSAT.COM?",
    title: "Acil Emlak Satmanın Kârlı, Güvenli, Hızlı Yolu",
    description: "Emlak satışında aradığınız hız, güven ve yetkinlik bir arada.",
    features: featureLists.main.features,
    button: {
        text: "Emlak Yükle",
        link: "/contact",
        variant: "primary" as const
    }
}

const FooterCta = {
    eyebrow: "Join The Community",
    title: 'Acil Emlak & Gayrimenkul Alım Satım Platformu',
    description: 'Gayrimenkulünüzü hızlı ve karlı bir şekilde satmak için doğru yerdesiniz. AcilEmlakSat.com ile 21 gün içinde değerinde satış yaparak zamandan ve stresten tasarruf edin. Profesyonel destekle.',
    hideCta: false,
    button: {
        text: 'Ekibimizle Tanışın',
        link: "/contact",
        target: '_blank'
    }
}

const styleGuideSection = {
    eyebrow: "Ekibimiz",
    headline: "Uzman Ekibimizle Tanışın",
    description: "Alanında uzman güvenilir danışmalarımızın mahareti, eşsiz yatırımcı portföyümüzle birleşir ve size arkanıza yaslanmak kalır.",
    image: {
        src: styleGuideImage,
        alt: "Featured image"
    },
    buttons: [
        {
            text: "Ekibimizle Tanışın",
            link: "/team",
            variant: "primary" as const
        }
    ]
}

const sideBySideStats = {
    eyebrow: "acilemlaksat.com",
    title: "Rakam Konuşur.",
    description: "Bizi daha iyi tanımanız için bazı rakamlar.",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "Rakam Konuşur.",
        description: "Bizi daha iyi tanımanız için bazı rakamlar.",
        button: {
            text: "Emlak Yükle",
            link: "/contact",
            variant: "primary" as const
        }
    }
};

const mainCta = {
    eyebrow: "YATIRIMCI OLUN",
    title: "Portföyünüzü Biz Yönetelim",
    description: "Yatırımcı havuzumuza katılarak sürekli yeni fırsatları yakalayın, danışman ekibimizle gayrimenkul portföyünüzü zirveye taşıyalım.",
    button: {
        text: "Danışmanlarımızla Tanışın",
        link: "/team",
        variant: "primary" as const,
        target: "_self" as const
    }
};


const logosSection = {
    eyebrow: "Referanslarımız",
    logos: logoLists.main.logos
}

const faqsSection = {
    eyebrow: "SSS",
    title: 'Sıkça Sorulan Sorular',
    description: 'Burada yanıtını bulamadığınız soruları bize sormaktan çekinmeyin.',
    faqs: faqLists.main.faqs
}

const recentPostsSection = {
    eyebrow: "BİZDEN",
    title: "Son Yazılar",
    description: "Araştırmalarımız, Yazılarımız ve Trend Raporlarımız.",
    button: {
            text: "Tümünü Görüntüle",
            link: "/blog",
        variant: "primary" as const
    }
}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <RecentPosts content={recentPostsSection} background="base" padding="base" postsToShow={3} category="Theme Usage"/>
    <SplitPanel content={styleGuideSection} imagePosition="right" background="light" padding="base" />
    <CtaBanner content={mainCta} variant="contained" background="light" paddingBottom="base" />
    <Logos content={logosSection} background="base" padding='small'/>
    <Stats content={sideBySideStats} background='dark' padding="base"/>
    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>
